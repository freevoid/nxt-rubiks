#define INBOX 1
#define OUTBOX 5

#define RECEIVE_DELAY 100
#define ACK "ack"

#define CMD_ECHO_LINE LCD_LINE3
#define RESPONSE_ECHO_LINE LCD_LINE5
#define INFO_LINE LCD_LINE6

#define CMD_SEPARATOR ':'

// opcodes
#define CMD_TURN 0
#define CMD_VTURN 1
#define CMD_HTURN 2
#define CMD_MOVE 3
#define CMD_CONFIG_HTURN 4
#define CMD_HTURN_EX 5
#define CMD_HAND_TURN 6
#define CMD_EXIT 666

// retvals
#define OK 0
#define E_WRONG_OPCODE 255

struct Command {
    int code;
    int args[5];
};

